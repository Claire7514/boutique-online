<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="banner_content text-center">
      <h2>Welcome to Cat-Eye !</h2>
        <div class="page_link">
        <p> Get access to your account by login with your acount informations ! </p> 
        </div>
      </div>
    </div>
  </div>
</section>


<section class="login_box_area p_120">
  <div class="container">
    <div class="row">

      <div class="col-lg-3">
      </div>

      <div class="col-lg-6">
        <div class="login_form_inner reg_form">

          <h4>Login Informations <br><br></h4>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'row login_form' }) do |f| %>
            <div class=" col-md-12 form-group ">
              <%= f.label :email, 'Email Address', :class => 'sr-only'  %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control ", placeholder: 'Email Address'  %>
            </div>

            <div class=" col-md-12 form-group ">
              <%= f.label :password, 'password', :class => 'sr-only'  %>
              <%= f.password_field :password, autocomplete: "current-password", :class => "form-control ", placeholder: 'Password' %>
            </div>

            
            <div class=" col-md-12 form-group ">
              <%= f.submit "Log in", :class => 'btn submit_btn' %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div> 

      <div class="col-lg-3">
      </div>

    </div>
  </div>
</section>