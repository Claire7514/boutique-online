<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div class="banner_content text-center">
      <h2>Welcome to you Profil Page !</h2>
        <div class="page_link">
        <p> Tu pourras ici, retrouver ton panier et modifier tes informations personnelles, géniale ! </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="feature_product_area latest_product_area">
    	<div class="main_box">
			<div class="container">

					<h1>Your Personal Informations</h1>
					<hr>
					<h4> Adresse mail: <%= @user.email %> <h4>
					<h4> Nom : <%= @user.last_name %> <h4>
					<h4> Prénom :  <%= @user.first_name %>  <h4>
					<br>
					<%= link_to "Edit Informations",  edit_user_registration_path(current_user), :class => "ibtn submit_btn" %>
					<br>
					<br>
					<h1> Your Cart </h1>
					<hr>
					<div class="latest_product_inner row">
              <% @cart_items.each do |cart_item| %>
              <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="f_p_item">
                  <div class="f_p_img">
                
                    <%= image_tag cart_item.item.image,  class: "img img-fluid"%>  
                    <div class="p_icon">
                      <a href="#"><i class="lnr lnr-heart"></i></a>
                    </div>
                  </div>
                  <h4> <%= link_to cart_item.item.title , item_path(cart_item.item.id) %></h4>
                  <h5><%= cart_item.item.price %> $</h5>
                </div>
              </div>
            <%end%>
              
            </div>
							
			</div>
		</div>
	</div>
</section>